<html>

<head>
  <meta charset="utf-8" />
  <title>User Profile</title>
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      padding: 20px;
      font-family: Arial, sans-serif;
      font-size: 16px;
      line-height: 1;
      color: #1a1c18;
      background-color: #fdfdf5;
    }

    h1 {
      margin-top: 8px;
      margin-bottom: 16px;
      font-size: 24px;
      font-weight: bolder;
      text-align: center;
      color: #2E6C0D;
    }

    h2 {
      margin-top: 8px;
      margin-bottom: 12px;
      font-size: 18px;
      font-weight: bold;
      color: #006783;
    }

    h3 {
      margin-top: 8px;
      margin-bottom: 8px;
      font-size: 12px;
      font-weight: 600;
    }

    .grid {
      display: grid;
      grid-template-columns: 160px auto;
      grid-gap: 8px;
      width: 100%;
    }

    .grid .key {
      padding: 8px;
      border-radius: 16px;
      background-color: #AFF588;
      color: #072100;
    }

    .grid .value {
      color:
        #2E6C0D;
      padding: 8px;
    }

    .grid .value.na {
      color: #5E52A7;
    }

    .grid .value.img {
      padding: 0;
    }

    .img.photo img {
      width: 128px;
      height: 128px;
      border-radius: 9999px;
      object-fit: cover;
    }

    .img.cover img {
      height: 180;
      width: 320;
      border-radius: 16px;
      object-fit: cover;
    }

    a.link {
      text-decoration: none;
      color: #2E6C0D;
    }
  </style>
</head>

<body>
  <h1>User Profile</h1>

  <span>Generated by First Nestjs App at: {{exportDate}}</span>

  <hr />

  <h2>Account Info </h2>

  <div class="grid">

    <div class="key">
      <div>ID</div>
    </div>
    <div class="value">{{id}}</div>

    <div class="key">
      <div>Username</div>
    </div>
    <div class="value">{{username}}</div>

    <div class="key">
      <div>Email</div>
    </div>
    {{#if email}}
    <div class="value">{{email}}</div>
    {{else}}
    <div class="value na">N/A</div>
    {{/if}}

    <div class="key">
      <div>Email Confirmed</div>
    </div>
    {{#if email}}
    <div class="value">{{#if emailConfirmed}} Verified {{else}}
      Unverified
      {{/if}}</div>
    {{else}}
    <div class="value na">N/A</div>
    {{/if}}

    <div class="key">
      <div>Roles</div>
    </div>
    <div class="value">
      {{#each userRoles}}
      {{role.name}}{{#unless @last}}, {{/unless}}
      {{/each}}
    </div>

    <div class="key">
      <div>Photo Image</div>
    </div>
    {{#if photoSrc}}
    <div class="value img photo">
      <img src="{{photoSrc}}" />
    </div>
    {{else}}
    <div class="value na">N/A</div>
    {{/if}}

    <div class="key">
      <div>Created At</div>
    </div>
    <div class="value">{{createdAt}}</div>

    <div class="key">
      <div>Updated At</div>
    </div>
    <div class="value">{{updatedAt}}</div>

  </div>

  <h2>Personal Data </h2>

  <div class="grid">

    <div class="key">
      <div>Cover Image</div>
    </div>
    {{#if coverSrc}}
    <div class="value img cover">
      <img src="{{coverSrc}}" />
    </div>
    {{else}}
    <div class="value na">N/A</div>
    {{/if}}

    <div class="key">
      <div>First Name</div>
    </div>
    {{#if firstName}}
    <div class="value">{{firstName}}</div>
    {{else}}
    <div class="value na">N/A</div>
    {{/if}}

    <div class="key">
      <div>Last Name</div>
    </div>
    {{#if lastName}}
    <div class="value">{{lastName}}</div>
    {{else}}
    <div class="value na">N/A</div>
    {{/if}}

    <div class="key">
      <div>Birth Date</div>
    </div>
    {{#if birthDate}}
    <div class="value">{{birthDate}}</div>
    {{else}}
    <div class="value na">N/A</div>
    {{/if}}

    <div class="key">
      <div>Salary</div>
    </div>
    {{#if salary}}
    <div class="value">{{salary}} $</div>
    {{else}}
    <div class="value na">N/A</div>
    {{/if}}

  </div>

  <h3>Privacy Statement</h3>

  <hr />

  <div>
    <span>Your privacy is important to us. For more information, please visit
      <a class="link" href="{{supportUrl}}">our website</a>
      or
      <a class="link" href="mailto:{{supportEmail}}">contact us</a>.
    </span>
  </div>
</body>

</html>